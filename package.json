{
  "name": "week-6-testing-assignment",
  "version": "1.0.0",
  "description": "Week 6 MERN Testing and Debugging Assignment",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "test": "jest",
    "test:unit": "jest --selectProjects client server --testPathPattern=\"(unit|spec)\"",
    "test:integration": "jest --selectProjects server --testPathPattern=\"integration\"",
    "test:e2e": "cd client && npm run test:e2e",
    "test:client": "jest --selectProjects client",
    "test:server": "jest --selectProjects server",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "setup-test-db": "cd server && npm run setup-test-db"
  },
  "keywords": ["mern", "testing", "jest", "cypress", "react", "express", "mongodb"],
  "author": "Student",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0"
  },
  "workspaces": [
    "client",
    "server"
  ]
}